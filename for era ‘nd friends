<body>

    <h1>ü™û My Digital Journal ü™û</h1>

    <div class="controls">
        <input type="file" id="imageInput" accept="image/*">
        <textarea id="textInput" placeholder="Write a letter or note..."></textarea>
        <button onclick="addEntry()">Add to Scrapbook ‚ú®</button>
    </div>

    <div id="scrapbook"></div>

    <script>
        // Load data on start
        window.onload = function() {
            const savedData = JSON.parse(localStorage.getItem('scrapbookEntries')) || [];
            savedData.forEach(entry => createCard(entry.image, entry.text));
        };

        function addEntry() {
            const file = document.querySelector('#imageInput').files[0];
            const text = document.querySelector('#textInput').value;
            const reader = new FileReader();

            if (file) {
                reader.onload = function(e) {
                    const imageData = e.target.result;
                    saveAndRender(imageData, text);
                }
                reader.readAsDataURL(file);
            } else {
                saveAndRender('', text);
            }
        }

        function saveAndRender(image, text) {
            if (!image && !text) return;

            // Save to LocalStorage
            const entries = JSON.parse(localStorage.getItem('scrapbookEntries')) || [];
            entries.push({ image, text });
            localStorage.setItem('scrapbookEntries', JSON.stringify(entries));

            createCard(image, text);
            
            // Clear inputs
            document.querySelector('#textInput').value = '';
            document.querySelector('#imageInput').value = '';
        }

        function createCard(image, text) {
            const card = document.createElement('div');
            card.className = 'card';
            
            const symbols = ["‚òÅÔ∏è", "ü¶¢", "üïØÔ∏è", "üéÄ", "üìú", "üß∏", "‚ú®"];
            const randomSymbol = symbols[Math.floor(Math.random() * symbols.length)];

            card.innerHTML = `
                ${image ? `<img src="${image}">` : ''}
                <p>${text}</p>
                <span class="symbols">${randomSymbol} ëÅç ${randomSymbol}</span>
            `;

            document.getElementById('scrapbook').appendChild(card);
        }
    </script>
</body>
